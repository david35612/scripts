local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

-- Function to clone the player's character
local function createClone()
    local clone = Character:Clone()
    clone.Name = "ChasingClone"
    clone.Parent = workspace

    -- Remove tools and accessories from the clone
    for _, item in ipairs(clone:GetDescendants()) do
        if item:IsA("Tool") or item:IsA("Accessory") or item:IsA("Script") then
            item:Destroy()
        end
    end

    -- Position the clone above the player
    local rootPart = clone:FindFirstChild("HumanoidRootPart")
    if rootPart then
        rootPart.CFrame = Character.HumanoidRootPart.CFrame * CFrame.new(0, 10, 0)
        rootPart.Anchored = false
    end

    -- Add chasing logic
    RunService.Heartbeat:Connect(function()
        if rootPart and Character:FindFirstChild("HumanoidRootPart") then
            local target = Character.HumanoidRootPart.Position
            local direction = (target - rootPart.Position).Unit
            rootPart.Velocity = direction * 500 -- Speed of chase
        end
    end)

    -- Reset the player if the clone touches them
    rootPart.Touched:Connect(function(hit)
        if hit.Parent == Character then
            Character:BreakJoints() -- Reset player
        end
    end)

    -- Auto-destroy the clone after 15 seconds
    task.delay(15, function()
        if clone and clone.Parent then
            clone:Destroy()
        end
    end)
end

-- Spawn 50 clones
for i = 1, 50 do
    task.delay(i * 0.1, function() -- Stagger creation slightly to reduce lag
        createClone()
    end)
end
