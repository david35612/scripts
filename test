local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

-- Function to create the monster
local function createMonster()
    -- Create the monster model
    local monster = Instance.new("Model")
    monster.Name = "Monster"
    monster.Parent = workspace

    -- Create the monster's body (a simple block)
    local monsterBody = Instance.new("Part")
    monsterBody.Name = "Body"
    monsterBody.Size = Vector3.new(5, 7, 5)
    monsterBody.Color = Color3.fromRGB(255, 0, 0) -- Red color
    monsterBody.Anchored = false
    monsterBody.CanCollide = true
    monsterBody.Parent = monster

    -- Add a humanoid to make it more versatile
    local humanoid = Instance.new("Humanoid")
    humanoid.Parent = monster

    -- Position the monster above the player initially
    local rootPart = Character:WaitForChild("HumanoidRootPart")
    monsterBody.Position = rootPart.Position + Vector3.new(0, 15, 0)

    -- Weld the monster's humanoid root part
    local monsterRoot = Instance.new("Part")
    monsterRoot.Name = "HumanoidRootPart"
    monsterRoot.Size = Vector3.new(2, 2, 2)
    monsterRoot.Transparency = 1 -- Invisible root part
    monsterRoot.CanCollide = false
    monsterRoot.Parent = monster

    -- Weld monster root to body
    local weld = Instance.new("WeldConstraint")
    weld.Part0 = monsterBody
    weld.Part1 = monsterRoot
    weld.Parent = monsterBody

    -- Add a chasing mechanism
    RunService.Heartbeat:Connect(function()
        if Character:FindFirstChild("HumanoidRootPart") then
            local playerPos = Character.HumanoidRootPart.Position
            local monsterPos = monsterBody.Position
            local direction = (playerPos - monsterPos).Unit
            monsterBody.Velocity = direction * 100 -- Adjust the chasing speed here
        end
    end)

    -- Reset the player if the monster touches them
    monsterBody.Touched:Connect(function(hit)
        if hit.Parent == Character then
            Character:BreakJoints() -- Reset the player
        end
    end)

    -- Automatically destroy the monster after 30 seconds
    task.delay(30, function()
        if monster and monster.Parent then
            monster:Destroy()
        end
    end)
end

-- Spawn the monster
createMonster()
